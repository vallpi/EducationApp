<Page x:Class="Editor.Question1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Editor"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="400"
      Title="Question1Page">

    <Grid>
        <StackPanel Margin="50,20,0,0">
            <Label>Question Number</Label>
            <TextBox Name="TextBoxQuestionNumber"></TextBox>
            <Label>Question</Label>
            <TextBox Name="TextBoxQuestion"></TextBox>
            <Label>Answer1</Label>
            <TextBox Name="TextBoxAnswer1"></TextBox>
            <Label>Answer2</Label>
            <TextBox Name="TextBoxAnswer2"></TextBox>
            <Label>Answer3</Label>
            <TextBox Name="TextBoxAnswer3"></TextBox>
            <Label>Answer4</Label>
            <TextBox Name="TextBoxAnswer4"></TextBox>
            <Label>Correct</Label>
            <StackPanel>
                <RadioButton Name="RadioButton1">1</RadioButton>
                <RadioButton Name="RadioButton2">2</RadioButton>
                <RadioButton Name="RadioButton3">3</RadioButton>
                <RadioButton Name="RadioButton4">4</RadioButton>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
