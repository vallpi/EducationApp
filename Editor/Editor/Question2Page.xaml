<Page x:Class="Editor.Question2Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Editor"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="400"
      Title="Question2Page">

    <Grid>
        <StackPanel Margin="50,20,0,0">
            <StackPanel FlowDirection="LeftToRight">
                <Button Name="ButtonAdd" Height="20" Width="100" Click="ButtonAdd_Click">Add</Button>
            </StackPanel>
            <Label>Question</Label>
            <TextBox Name="TextBoxQuestion"></TextBox>
            <Label>Correct Answer</Label>
            <TextBox Name="TextBoxAnswer"></TextBox>
        </StackPanel>
    </Grid>
</Page>
