<Window x:Class="EducationApp.Result"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EducationApp"
        mc:Ignorable="d"
        Title="Result" Height="400" Width="600" ResizeMode="NoResize">
    <Grid Background="#FFF8DC">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Name="textBlock_Result" Grid.Row="0" FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        <Image Name="image_Result" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <MediaElement LoadedBehavior="Play"  Volume="1" Name="mediaElement_music" Grid.Row="1" Width="20" Height="20"/>
    </Grid>
</Window>